<Window x:Class="Beps.CatchTheDrop.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Catch the Drop"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Icon="/CatchTheDrop;component/Images/drop.jpg"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Closed="Window_Closed"
        mc:Ignorable="d" d:DesignHeight="670" d:DesignWidth="594" WindowState="Maximized" WindowStyle="None">
    <Window.Background>
        <ImageBrush ImageSource="/CatchTheDrop;component/Images/background.png" />
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*" />
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="0.1*" />
        </Grid.RowDefinitions>
        <Image HorizontalAlignment="Left" Margin="10,10" Grid.Row="0" Name="logo"
               Source="/CatchTheDrop;component/Images/logo.png" />
        <Image Name="video" Margin="0,13,30,0" HorizontalAlignment="Right" Width="141" />
        <Canvas Name="playfield" Grid.Row="1" Margin="12,16,12,6" Background="{x:Null}"></Canvas>
        <Image HorizontalAlignment="Left" Grid.Row="2" Name="bepsLogo" Source="/CatchTheDrop;component/Images/beps.png" />
    </Grid>
</Window>

